<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".objekpajak.OPFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingLeft="10dp"
                >

                <ImageView
                    android:id="@+id/img1"
                    android:src="@drawable/ic_pin_drop"
                    android:tint="@color/colorAccent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:maxWidth="50dp"
                    android:layout_width="wrap_content"
                    />

                <TextView
                    android:id="@+id/tv1"
                    android:textColor="@color/profileEditTextColor"
                    android:layout_toRightOf="@+id/img1"
                    android:textSize="15sp"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    style="@style/viewParent.headerText.HomeCardTitle"
                    android:text="Alamat" />

                <TextView
                    android:id="@+id/txtopalamat"
                    android:textColor="@color/profileEditTextColor"
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/tv1"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/img1"
                    android:text="Jl Bhayangkara Gg Karya 1" />
            </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgava"
        android:background="@color/colorAccent"/>
            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:paddingLeft="10dp"
                >

                <ImageView
                    android:id="@+id/img2"
                    android:src="@drawable/ic_check"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:maxWidth="50dp"
                    android:layout_width="wrap_content"
                    android:tint="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/tv2"
                    android:textColor="@color/profileEditTextColor"
                    android:layout_toRightOf="@+id/img2"
                    android:textSize="15sp"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    style="@style/viewParent.headerText.HomeCardTitle"
                    android:text="No Ijin Pajak Air Permukaan" />

                <TextView
                    android:id="@+id/txtnoipat"
                    android:textColor="@color/profileEditTextColor"
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/tv2"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/img2"
                    android:text="111.1111" />
            </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgava"
        android:background="@color/colorAccent"/>

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                android:paddingLeft="10dp"
                >

                <ImageView
                    android:id="@+id/img3"
                    android:src="@drawable/ic_baseline_account"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:maxWidth="50dp"
                    android:layout_width="wrap_content"
                    android:tint="@color/colorAccent"
                    />

                <TextView
                    android:id="@+id/tv3"
                    android:textColor="@color/profileEditTextColor"
                    android:layout_toRightOf="@+id/img3"
                    android:textSize="15sp"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    style="@style/viewParent.headerText.HomeCardTitle"
                    android:text="Wajib Pajak" />

                <TextView
                    android:id="@+id/txtnamawp"
                    android:textColor="@color/profileEditTextColor"
                    style="@style/viewParent.headerText.homeCardContent"
                    android:layout_below="@id/tv3"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/img3"
                    android:text="Samirah Rahayu" />
            </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/imgava"
        android:background="@color/colorAccent"/>

    </LinearLayout>